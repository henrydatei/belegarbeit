\newcommand{\USCCover@setCourse}{
	% use specified text if course does not match
	\gdef\@labelCourseValue{\MCS@course}
	
	\def\1{\MCS@course}
	% dont remove last two braces / empty else clause
	\def\0{winf}\ifthenelse{\equal{\0}{\1}}{\gdef\@labelCourseValue{\@labelCourseWINF}}{}
	\def\0{wing}\ifthenelse{\equal{\0}{\1}}{\gdef\@labelCourseValue{\@labelCourseWING}}{}
	\def\0{wiwi}\ifthenelse{\equal{\0}{\1}}{\gdef\@labelCourseValue{\@labelCourseBWL}}{}
	\def\0{wipad}\ifthenelse{\equal{\0}{\1}}{\gdef\@labelCourseValue{\@labelCourseWIPAD}}{}
	
}

